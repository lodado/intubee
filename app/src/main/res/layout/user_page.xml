<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.userPage">

    <RelativeLayout

        android:layout_width = "match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/userpageImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_alignParentLeft="true"
            ></ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userpageImage"
            android:orientation="vertical"
            android:id="@+id/profile"
            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/userpageImage"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My    ID    : "

                />

            <TextView
                android:id="@+id/userpageID1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="my id"
                android:gravity="center"
                android:textColor="#0000FF"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/userpageImage"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Email : "

                    />

                <TextView
                    android:id="@+id/userpageEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="my email"
                    android:gravity="center"
                    android:textColor="#0000FF"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userpagetoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/userpageImage"
            android:layout_below="@id/profile"

            >

            <Button
                android:id="@+id/btnchangeprofilepicture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="change pic"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btnlogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="log out"
                android:layout_weight="1"
                />
        </LinearLayout>

        <Button
            android:id="@+id/mypagebtn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userpagetoolbar"
            android:text="btn1"
            />
        <Button
            android:id="@+id/mypagebtn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mypagebtn1"
            android:text="btn2"
            />

    </RelativeLayout>
</LinearLayout>